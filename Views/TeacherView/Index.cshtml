    <div class="info container">
        <div class="row">
            <div class="col left-info">
                <div class="desc1">
                    <h1>  Teacher's class list </h1>
                    <table>
                        <thead>
                            <tr>
                                <th>Subject Name</th>

                                <th>Course Name</th>
                                <!-- Các cột khác có thể thêm ở đây -->
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Subjects.SubjectName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Courses.CourseName)
                                </td>
                                <a href="@Url.Action("Details", "TeacherView", new { id = item.TeacherID })">Detail</a>

                            </tr>
                        }


                    </table>
                </div>


            </div>

