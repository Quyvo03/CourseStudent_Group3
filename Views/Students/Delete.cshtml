                    <span>Classes</span>
                </a>
            </li>

            <!-- Nav Item - Subjects -->

            <li class="nav-item ">
                <a class="nav-link" href="@Url.Action("Index", "Subjects")">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Subjects</span>
                </a>
            </li>
            <!--Nav Item Teachers -->
            <li class="nav-item ">
                <a class="nav-link" href="@Url.Action("Index", "Teacher")">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Teachers </span>
                </a>
            </li>
            <!--Nav Item  Students-->
            <li class="nav-item active ">
                <a class="nav-link" href="@Url.Action("Index", "Students")">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Students </span>
