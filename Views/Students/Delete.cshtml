            }

        #list-classes li {
            /* Các thuộc tính khác của mục */
            padding: 5px;
            margin: 5px;
            cursor: pointer; /* Đổi con trỏ thành bàn tay khi hover vào */
            text-decoration: none; /* Loại bỏ gạch chân mặc định */
